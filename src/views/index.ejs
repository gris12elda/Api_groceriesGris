<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <title>Abarrotes Gris:3</title>
    <style>
        body {
            background-color: #000000;
        }

        h1 {
            text-align: center;
            color: #ffffff;
        }

        .title {
            padding: 2px;
            background-color: rgb(0, 0, 0);

        }
    </style>
</head>

<body>
    <!-- <ul>
        <% products.forEach((product)=>{ %>
            <li> <%= product.description %></li>
        <% }) %>
    </ul> -->

    <div data-role="page">
        <div data-role="header">
            <div class="title">
                <h1>Abarrotes Gris:3</h1>
            </div>
            <div data-role="footer">
                <div data-role="navbar">
                    <ul>
                        <li><a href="#" data-icon="home">Inicio</a></li>
                        <li><a href="#" data-icon="eye" class="ui-btn-active">Productos</a></li>
                        <li><a href="#" data-icon="user">Empleados</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div data-role="content">
            <form action="/" method="POST">
                <input type="text" name="barcode" id="txt_barcode" placeholder="Codigo de Barras">

                <input type="text" name="description" id="txt_description" placeholder="Descripcion">

                <input type="text" name="brand" id="txt_brand" placeholder="Marca">

                <input type="text" name="cost" id="txt_cost" placeholder="Precio de Compra">

                <input type="text" name="price" id="txt_price" placeholder="Precio de Venta">

                <input type="number" name="stock" id="txt_stock" placeholder="Existencias">

                <label for="">Fecha expiracion</label>
                <input type="date" data-role="date" data-inline="true">
                
                <label for="flip-6">Activo</label>
                <select name="status" id="flip-6" data-role="slider" data-mini="true">
                    <option value="0">No</option>
                    <option value="1">Si</option>
                </select>

                <button type="submit" id="submit-6" class="ui-shadow ui-btn ui-corner-all ui-mini">Guardar</button>
            </form>
            <form>
                <input data-type="search" id="searchForCollapsibleSetChildren">
                    </form>
                    <div data-role="collapsibleset" data-filter="true" data-children="> div, > div div ul li" data-inset="true" id="collapsiblesetForFilterChildren" data-input="#searchForCollapsibleSetChildren">
               <% products.forEach((product)=>{%>
                <div data-role="collapsible" data-filtertext="<%= product.description%>">
                    <h3><%= product.description %></h3>
                        <ul data-role="listview" data-inset="false">
                        <li data-filtertext="Animals Cats">Codigo de barras: <%= product.barcode %></li>
                        <li data-filtertext="Animals Dogs">Marca: <%= product.brand%> </li>
                        <li data-filtertext="Animals Lizards">Precio de compra: <%= product.price%></li>
                        <li data-filtertext="Animals Snakes">Precio de costo: <%= product.cost %> </li>
                        <li>Existencias: <%= product.stock%> </li>
                        <li>Fecha de caducidad: <%= product.expireDate %></li>
                        <li>status: <%= product.status %></li>
                        <li><a href="/<%= product.barcode %>" class="ui-btn">Editar</a></li>
                        <li><a href="/delete/<%= product.barcode %>" class="ui-btn">Eliminar</a></li>
                       </ul>
                </div>
               <%}) %>
            </div>
            <div data-role="footer">
                <h5>Desarrollado por Gris:3</h5>
            </div>

        </div>
    </div>


</body>

</html>